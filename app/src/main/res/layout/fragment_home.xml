    <androidx.viewpager.widget.ViewPager
        android:id="@+id/navslider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/one"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/navslider"
        android:layout_width="190dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/aa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/dog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp" />
            <TextView
                android:id="@+id/tv1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_editor_absoluteY="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@id/tv2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/aa"
                android:text="Patients"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv2"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/aa"
                android:text="10 Active"
                android:textSize="18dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/two"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/navslider"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="190dp"
        android:layout_height="110dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bb"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/dog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="114dp"
                android:layout_height="31dp"
                android:text="Appointments"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/bb"
                app:layout_editor_absoluteY="15dp"
                tools:layout_editor_absoluteY="15dp" />
            <TextView
                android:id="@+id/tv4"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/bb"
                app:layout_constraintRight_toRightOf="parent"
                android:text="10 Active"
                android:textSize="18dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/three"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="190dp"
        android:layout_height="110dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cc"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/dog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp" />
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_editor_absoluteY="15dp"
                app:layout_constraintLeft_toRightOf="@id/cc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:text="Patients"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/t2"
                app:layout_constraintTop_toBottomOf="@id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/cc"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ADD"
                android:textSize="18dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/four"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="190dp"
        android:layout_height="110dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/dog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp" />
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_editor_absoluteY="15dp"
                app:layout_constraintLeft_toRightOf="@id/dd"
                android:text="Appointment"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/t4"
                app:layout_constraintTop_toBottomOf="@id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/dd"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ADD"
                android:textSize="18dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>